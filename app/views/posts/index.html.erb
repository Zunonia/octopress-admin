<h1>Listing Posts</h1>
<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post[:date] %></td>
    <td><%= post[:title] %></td>
    <td><%= post[:url] %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post[:url]) %></td>
    <td><%= link_to 'Delete', post_path(post), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>